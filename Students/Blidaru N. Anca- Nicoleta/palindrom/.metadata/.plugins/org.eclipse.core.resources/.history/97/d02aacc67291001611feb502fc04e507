package project3;

import java.util.*;

public class Palindrom {

	public static void main(String[] args) {

		 /*Integer n;
		 Scanner in = new Scanner(System.in);
		 System.out.println("Cititi numarul nr: ");
	     n = in.nextInt();*/
		 
	     FindNumbers();
		 //Palindr(n);
	}
	
	public static int Palindr(int n) {
		int nr = 0;
		
		while(n > 0)
		 {
			nr *= 10;
			nr += n%10;
		    n/=10;
		   // System.out.println("" + nr);
		 }
		return nr;
	}
	
	public static void FindNumbers() {
		
		int i, j, palinmax = 0;
	    for(i=999; i>=100; i--)
	    	for(j=999; j>=100; j--)
	    		 if( Palindr(i*j) > palinmax)
	    			  {
	    			   palinmax = i*j;
	    			   System.out.println("Nr sunt ", +i, +j);
	    			   break;
	    			  }
	    
	 
	    System.out.println("Palindromul maxim format din produsul numerelor de 3 cifre este" + palinmax);
		
	}

}
